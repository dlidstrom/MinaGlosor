<form method="POST" name="form" action="@Url.Action("Logon")">
    @Html.DisplayFor(model => Html.ViewData.ModelState, "ValidationSummary", new { message = "Det gick inte att logga in. Försök igen." })
    <div class="row">
        <div class="col-md-4">
            <div class="form-group" ng-class="{'has-error': form.useremail.$dirty && form.useremail.$invalid}">
                <label class="control-label">
                    Ange e-postadress
                </label>
                <input type="email"
                       class="form-control"
                       name="email"
                       ng-model="user.email"
                       placeholder="Skrin din e-postadress"
                       autofocus="autofocus"
                       required />
                <span class="help-block" ng-show="form.email.$dirty && form.email.$invalid">
                    Skriv din e-postadress
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group" ng-class="{'has-error': form.password.$dirty && form.password.$invalid}">
                <label class="control-label">
                    Ange lösenord
                </label>
                <input type="password"
                       class="form-control"
                       name="password"
                       ng-model="user.password"
                       placeholder="Skriv ditt lösenord"
                       required />
                <span class="help-block" ng-show="form.password.$dirty && form.password.$invalid">
                    Skriv ett lösenord
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <input class="btn btn-primary"
                   type="submit"
                   value="Logga in"
                   ng-disabled="form.$invalid" />
        </div>
    </div>
</form>