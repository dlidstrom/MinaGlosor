@model MinaGlosor.Web.Controllers.AccountActivateController.ActivateAccountViewModel

<p class="lead">
    Välkommen till MinaGlosor.se!
    Börja med att välja ett användarnamn för ditt konto samt ett personligt lösenord.
</p>
<form method="POST" name="form" action="@Url.Action("Activate")">
    @Html.DisplayFor(model => Html.ViewData.ModelState, "ValidationSummary", new { message = "Ditt konto gick inte att skapa. Försök igen." })
    @Html.HiddenFor(x => x.ActivationCode)
    <div class="row">
        <div class="col-md-4">
            <div class="form-group" ng-class="{'has-error': form.password.$dirty && form.username.$invalid}">
                <label class="control-label">
                    Ange användarnamn för din profil
                </label>
                <input type="text"
                       class="form-control"
                       name="username"
                       ng-model="user.username"
                       placeholder="4-20 tecken"
                       autofocus="autofocus"
                       minlength="4"
                       maxlength="20"
                       pattern="^(?=.{4,20}$)(?![-])(?!.*[-]{2})[a-zA-Z0-9-]*[a-zA-Z]$"
                       title="Användarnamn får bara innehålla alfanumeriska tecken eller bindestreck samt kan ej börja eller sluta med bindestreck"
                       required />
                <span ng-messages="form.username.$error" ng-show="form.username.$dirty">
                    <div ng-message="required">Ange ett användarnamn</div>
                    <div ng-message="minlength">Minst 4 tecken</div>
                    <div ng-message="pattern">Användarnamn får enbart innehålla alfanumeriska tecken eller bindestreck samt kan ej börja eller sluta med bindestreck</div>
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group" ng-class="{'has-error': form.password.$dirty && form.password.$invalid}">
                <label class="control-label">
                    Ange lösenord
                </label>
                <input type="password"
                       class="form-control"
                       name="password"
                       ng-model="user.password"
                       placeholder="Skriv ett lösenord"
                       required />
                <span class="help-block" ng-show="form.password.$dirty && form.password.$invalid">
                    Skriv ett lösenord
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group" ng-class="{'has-error': form.passwordConfirm.$dirty && (form.passwordConfirm.$invalid || user.passwordConfirm != user.password)}">
                <label class="control-label">
                    Upprepa lösenordet
                </label>
                <input type="password"
                       class="form-control"
                       name="passwordConfirm"
                       ng-model="user.passwordConfirm"
                       placeholder="Upprepa lösenordet" 
                       required />
                <span class="help-block" ng-show="form.passwordConfirm.$dirty && (form.passwordConfirm.$invalid || user.passwordConfirm != user.password)">
                    Lösenorden måste vara lika
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <input class="btn btn-primary" type="submit" value="Spara" ng-disabled="adminform.$invalid" />
        </div>
    </div>
</form>