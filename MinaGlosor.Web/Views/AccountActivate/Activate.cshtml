@model MinaGlosor.Web.Controllers.AccountActivateController.ActivateAccountViewModel

<p class="lead">
    Välkommen till MinaGlosor.se!
    Börja med att välja ett personligt lösenord.
</p>
<form method="POST" name="form" action="@Url.Action("Activate")">
    @Html.DisplayFor(model => Html.ViewData.ModelState, "ValidationSummary", new { message = "Det gick inte att spara. Försök igen." })
    @Html.HiddenFor(x => x.ActivationCode)
    <div class="row">
        <div class="col-md-4">
            <div class="form-group" ng-class="{'has-error': form.password.$dirty && form.password.$invalid}">
                <label class="control-label">
                    Ange lösenord
                </label>
                <input type="password"
                       class="form-control"
                       name="password"
                       ng-model="user.password"
                       placeholder="Skriv ett lösenord"
                       autofocus="autofocus"
                       required />
                <span class="help-block" ng-show="form.password.$dirty && form.password.$invalid">
                    Skriv ett lösenord
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group" ng-class="{'has-error': form.passwordConfirm.$dirty && (form.passwordConfirm.$invalid || user.passwordConfirm != user.password)}">
                <label class="control-label">
                    Upprepa lösenordet
                </label>
                <input type="password"
                       class="form-control"
                       name="passwordConfirm"
                       ng-model="user.passwordConfirm"
                       placeholder="Upprepa lösenordet" 
                       required />
                <span class="help-block" ng-show="form.passwordConfirm.$dirty && (form.passwordConfirm.$invalid || user.passwordConfirm != user.password)">
                    Lösenorden måste vara lika
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <input class="btn btn-primary" type="submit" value="Spara" ng-disabled="adminform.$invalid" />
        </div>
    </div>
</form>